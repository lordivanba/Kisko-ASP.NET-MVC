@model kisko.Models.CareerDTO;
@{
    ViewData["Title"] = "Edit";
}

<section class="container_gestion_proyecto">
    <div>
        <form class="proyecto_form" asp-action="Edit" method="POST" enctype="multipart/form-data">

            <div class="form-group">
                <label for="name">Nombre de la carrera</label>
                <input class="form-control" type="text" name="name" id="name" maxlength="100" required asp-for="Name" value="@Model.Name">
            </div>

            <div class="form-group">
                <label for="division">Division</label>
                <select class="form-select" name="division" asp-for="Division">
                    <option selected>@Model.Division</option>
                    <option value="Tecnologías de la Información y Comunicación">Tecnologías de la Información y Comunicación</option>
                    <option value="Industrial">Industrial</option>
                    <option value="Administración">Administración</option>
                    <option value="Innovación y Desarrollo Estratégico">Innovación y Desarrollo Estratégico</option>
                </select>
            </div>

            <div class="form-group">
                <label for="description">Descripcion de la carrera</label>
                <textarea class="form-control" name="description" id="description" cols="30" rows="10" maxlength="750" required asp-for="Description">@Model.Description</textarea>
            </div>


            <div class="form-group">
                <label asp-for="Pdf" class="form-label">Subir plan de estudio</label>
                <input class="form-control" type="file" asp-for="Pdf" value="@Model.PdfName">
                <span asp-validation-for="Pdf" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Guardar</button>
        </form>
    </div>
</section>