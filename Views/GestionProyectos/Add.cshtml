@model kisko.Models.ProjectDTO; 
@{
    ViewData["Title"] = "AddProject";
    Layout = "_AdminLayout";
}
<h1 class="title_gestion_proyectos">
    <img src="https://image.flaticon.com/icons/png/512/2683/2683274.png" alt="">
    Gestion de proyectos
</h1>
<section class="container_gestion_proyecto">
    <div>
        <form class="proyecto_form" asp-action="Add" method="POST">

            <div class="form-group">
                <label for="name">Nombre del proyecto</label>
                <input class="form-control" type="text" name="name" id="name" asp-for="Name" maxlength="100" required>
            </div>

            <div class="form-group">
                <label for="description">Descripcion del proyecto</label>
                <textarea class="form-control" name="description" id="description" asp-for="Description" cols="30" rows="10" maxlength="250" required></textarea>
            </div>

            <div class="form-group">
                <label for="gradegroup">Grado y Grupo</label>
                <input class="form-control" type="text" name="gradegroup" id="gradegroup" asp-for="GradeGroup" required>
            </div>

            <div class="form-group">
                <label for="Student">Integrante #1</label>

                <select class="form-select" name="StudentId" asp-for="StudentId" title="Selecciona el integrante" required>
                    <option selected></option>
                    @foreach (var item in ViewBag.Students)
                    {
                        <option value="@item.Id">@item.Name @item.Lastname</option>
                    }
                </select>
            </div>


            <div class="form-group">
                <label for="SecondStudentId">Integrante #2</label>

                <select class="form-select" name="SecondStudentId" asp-for="SecondStudentId" title="Selecciona el integrante" required>
                    <option selected></option>
                    @foreach (var item in ViewBag.Students)
                    {
                        <option value="@item.Id">@item.Name @item.Lastname</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <a id="btnAddAlumnoProject" asp-controller="GestionAlumnos" asp-action="Add" class="btn btn-secondary">Añadir alumno</a>
            </div>

            <div class="form-group">
                <label for="video">Link del video</label>
                <input class="form-control" type="text" name="video" id="video" asp-for="Video">
            </div>

            <button type="submit" class="btn btn-success">Guardar</button>
        </form>
    </div>
</section>

