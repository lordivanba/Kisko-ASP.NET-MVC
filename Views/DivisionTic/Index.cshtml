@model IEnumerable<CareerDTO>
@{
    ViewData["Title"] = "DivisionTic";
}

<section class="container_carreras_utm">
    <h1 class="title_division">DIVISIÓN TECNOLOGÍAS DE LA INFORMACIÓN Y COMUNICACIÓN</h1>
    <hr>
    @foreach (var item in Model)
    {
        <div class="container_carrera">
            <h2>@item.Name</h2>
            <p>@item.Description</p>
            <a href="~/archives/@item.PdfName" class="btn btn-primary" target="_blank">Plan de estudio</a>
            <hr>
        </div>
    }
</section>